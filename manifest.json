{
    "name": "JobSaver",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "identity"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "oauth2": {
        "client_id": "${CLIENT_ID}",
        "scopes": [
            "https://www.googleapis.com/auth/spreadsheets"
        ]
    }
}
